{
  "compilerOptions": {
    "target": "es2016",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "build",
    "strictNullChecks": true
  },
  "exclude": [
    "./node_modules/**/*",
    "tests"
  ]
}